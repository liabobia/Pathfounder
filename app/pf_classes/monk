class Monk < PfClass

  role :class
  hit_die 8
  alignment :lawful

  skills :acrobatics, :craft, :climb, :escape_artist, :intimidate, :knowledge_history, :knowledge_religion, :perception, :perform, :profession, :ride, :sense_motive, :stealth, :swim
  skill_ranks_per_level 4

  base_attack_bonus      0
  mods fortitude_save:  -2
  mods will_save:        2
  mods reflex_save:      0

  adds weapon_proficiency: [:club, :light_crossbow, :heavy_crossbow, :dagger, :handaxe, :javelin, :kama, :nunchaku, :quarterstaff, :sai, :shortspear, :shortsword, :shuriken, :siangham, :sling, :spear]
  adds crap: [:AC_bonus, :flurry_of_blows, :unarmed_strike, :stunning_fist] #so far, the best syntax for extra powers that i could think of.
end
